<div class="modal-content">
  <%= form_for @product, html: { multipart: true }, url: {action: :create} do |f| %>
      <div class="modal-header">
        <h4 class="modal-title">Add a Product</h4>
      </div>
      <div class="modal-body">
        <p>
          <%= "<div class=\"alert alert-danger\">#{@product.errors.full_messages.first}</div>".html_safe if @product.errors.any? %>
        <div class="form-group">
          <div class="row">
            <div class="col-xs-8">
              <label class="control-label">Product Name</label>
              <%= f.text_field :name, :class => "form-control" %>
            </div>

            <div class="col-xs-4">
              <label class="control-label">Price</label>
              <%= f.text_field :price, :class => "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-12">
              <label class="control-label">Short Description</label>
              <%= f.text_field :short_description, :class => "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-xs-12">
              <label class="control-label">Full Description</label>
              <%= f.text_area :full_description, :rows => 5, :class => "form-control" %>
            </div>
          </div>
        </div>

        </p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Back', root_path, class: 'btn btn-default'%>
        <%= f.submit 'Create Product', :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>
